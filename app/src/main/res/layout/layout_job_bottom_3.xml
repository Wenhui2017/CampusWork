<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.shun.campuswork.view.ButtonView
        android:id="@+id/btnv_star"
        style="@style/job_btn_1"
        shun:view_image="@mipmap/star"
        shun:view_title="收藏" />

    <com.shun.campuswork.view.ButtonView
        android:id="@+id/btnv_share"
        style="@style/job_btn_1"
        shun:view_image="@mipmap/share"
        shun:view_title="分享" />

    <LinearLayout
        android:id="@+id/ll_sign_up"
        style="@style/job_btn"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:background="@drawable/rectangle_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/message"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我要报名"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
