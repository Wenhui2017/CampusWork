<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <View
            android:id="@+id/v_back"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View style="@style/vertical_line" />

    <View style="@style/bulk_light_gray" />

    <View style="@style/vertical_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号码"
                android:textColor="@color/text_deep_black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:inputType="phone"
                android:background="@null"
                android:hint="请输入手机号码"
                android:paddingLeft="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/text_deep_black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入验证码"
                android:paddingLeft="10dp"
                android:textSize="16sp" />

        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/text_deep_black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="6-20位数字或字母"
                android:paddingLeft="10dp"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/vertical_line" />

    <View
        style="@style/bulk_light_gray"
        android:background="@color/light_gray" />

    <View style="@style/vertical_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="邀请码"
            android:textColor="@color/text_deep_black"
            android:textSize="16sp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入邀请码(可不填)"
            android:paddingLeft="10dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_accept"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checked_selector"
            android:drawablePadding="5dp"
            android:checked="true"
            android:text="我已经阅读并同意"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:textColor="@color/primary_color" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册"
        android:background="@drawable/rectangle_1"
        android:layout_margin="5dp"
        android:textColor="@color/white" />


</LinearLayout>
